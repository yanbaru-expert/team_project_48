<div class="container-fluid">
  <div class="row">
    <% @texts.each.with_index(1) do |text| %>
    <div class="col-12 col-md-6 col-lg-4 text-card-container">
      <div class="card content-card border-dark mb-3">
        <%= link_to text_path(text.id), class:"abc" do %>
        <div class="card-header p-0">
          <img class="card-img-top img-fluid" src="https://d5izmuz0mcjzz.cloudfront.net/texts/no_image.jpg">
        </div>
        <div class="card-body text-dark text-card-body">
          <p id="text-<%= text.id %>">
            <% if text.read_by?(current_user) %>
            <%= render "read", text: text.id %>
            <% else %>
            <%= render "not_read", text: text.id %>
            <% end %>
          </p>
          <p class="card-text text-title"><%= text.title %></p>
          <p>【<%= text.genre_i18n %>】</p>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>